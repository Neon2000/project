<p id="notice"><%= notice %></p>

<h1>Usercommentratings</h1>

<table>
  <thead>
    <tr>
      <th>Star</th>
      <th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <% @ratings.each_pair do |star, count| %>
      <span style="margin: 0 5px">
        <td><%= "#{star}⭐(#{count})" %></td>
        <%end%>
      </span>
        <% @usercommentratings.each do |usercommentrating| %>
        <td><%= User.find(usercommentrating.user_id).email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Usercommentrating', new_usercommentrating_path %>
